<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="mb-4"> Редактировать профиль </h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-3">
          <%= f.label :email, "Электронная почта", class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div class="mb-3">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="mb-3">
          <%= f.label :password, "Пароль", class: "form-label" %> <span class="text-muted">(если не нужно менять - оставить пустым)</span>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <% if @minimum_password_length %>
            <br />
            <small class="text-muted">Минимальная длина - <%= @minimum_password_length %> символов</small>
          <% end %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, "Подтверждение пароля", class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :current_password, "Текущий пароль", class: "form-label" %> <span class="text-muted">(необходим для сохранения изменений)</span>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Сохранить", class: "btn btn-primary" %>
        </div>
      <% end %>

      <h3 class="mt-4">Удаление профиля</h3>

      <div class="mb-3">
        <h5 class="mt-4"> Если вам нужно удалить профиль, сделайте это по кнопке ниже.</h4> 
        <%= button_to "Удалить мой профиль", registration_path(resource_name), data: { confirm: "Вы уверены?", turbo_confirm: "Вы уверены?" }, method: :delete, class: "btn btn-danger" %>
      </div>

      <%= link_to "Назад", :back, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
